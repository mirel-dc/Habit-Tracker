<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InfoFragment">

    <ImageView
        android:id="@+id/ivManul"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:scaleType="center"
        android:src="@drawable/manul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="photo of manul" />

    <TextView
        android:id="@+id/tvCreator"
        style="@style/CasualTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Разработал приложение: Цыганков Валерий"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivManul" />

    <TextView
        style="@style/CasualTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="На курсе Doubletapp"
        app:layout_constraintStart_toStartOf="@+id/tvCreator"
        app:layout_constraintTop_toBottomOf="@id/tvCreator" />


</androidx.constraintlayout.widget.ConstraintLayout>